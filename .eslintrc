{
  "plugins": [
    "jsdoc"
  ],

  "extends": [
    "eslint:recommended",
    "google",
    "plugin:jsdoc/recommended"
  ],

  "parser": "babel-eslint",

  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  },

  "globals": {
    "Promise": true,
    "expect": true,
    "should": true
  },

  "rules": {
    "no-invalid-this": 0,
    "max-len": [2, 130, 2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "comments": 300
      }
    ],
    "require-atomic-updates": 0,
    "no-extra-semi": 0,
    "indent": 0,
    "semi": ["error", "never", {"beforeStatementContinuationChars": "always"}],
    "operator-linebreak": [
      "error",
      "after",
      {"overrides": {"?": "before", ":": "before"}}
    ],
    "quote-props": 0,
    "object-curly-spacing": ["error", "always"],
    "react/display-name": 0,
    "new-cap": [2, {
      "capIsNewExceptionPattern": "^(DataTypes|Sequelize)\\.."
    }],
    "valid-jsdoc": 0,
    "jsdoc/check-tag-names": [2, {
      "definedTags": [
        "swagger"
      ]
    }]
  }
}
